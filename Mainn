    <script>
        // Funci칩n existente para mostrar imagen y texto
        function showImage(option) {
            const container = document.getElementById('image-container');
            const img = document.getElementById('tvd-photo');
            const caption = document.getElementById('image-caption');
            
          const images = {
                'siempre': 'siempre.jpg',   
                'vampiros': 'vampiros.jpg',  
                'eternidad': 'eternidad.jpg'  
            };

            const captions = {
                'siempre': 'Un shot por cada mes de amistad 游볚',
                'vampiros': 'Beb칠 para convertirte 游뽖',
                'eternidad': 'Manifiesto 游눐'
            };

            // Ocultamos primero para reiniciar la animaci칩n de entrada
            container.style.display = 'none';
            
            // Peque침o truco para reiniciar la animaci칩n
            setTimeout(() => {
                img.src = images[option];
                caption.textContent = captions[option];
                container.style.display = 'block';
            }, 10);
        }

        // --- NUEVA FUNCI칍N: Lluvia de Sangre con Emojis ---
        function createBloodRain() {
            const emojis = ['游뽖', '游눌', '游꽁', '游빁']; // Emojis a usar
            const particleCount = 20; // Cantidad de emojis por click

            for (let i = 0; i < particleCount; i++) {
                // Crear el elemento
                const particle = document.createElement('div');
                particle.classList.add('blood-particle');
                particle.innerText = emojis[Math.floor(Math.random() * emojis.length)];

                // Posici칩n horizontal aleatoria (de 0% a 100% del ancho de pantalla)
                particle.style.left = Math.random() * 100 + 'vw';
                
                // Tama침o aleatorio para variedad
                particle.style.fontSize = (Math.random() * 1.5 + 1) + 'rem';

                // Velocidad de animaci칩n aleatoria (entre 1s y 3s)
                const duration = Math.random() * 2 + 1;
                particle.style.animationDuration = duration + 's';

                // A침adir al cuerpo de la p치gina
                document.body.appendChild(particle);

                // Limpieza: Eliminar el elemento una vez que termina la animaci칩n
                setTimeout(() => {
                    particle.remove();
                }, duration * 1000);
            }
        }
    </script>

